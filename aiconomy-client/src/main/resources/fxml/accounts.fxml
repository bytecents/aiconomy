<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:id="rootPane"
           fx:controller="com.se.aiconomy.client.controller.AccountsController">
    <VBox fx:id="mainVBox" styleClass="p-8">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <!-- Top Section -->
        <HBox alignment="CENTER" styleClass="pb-4 gap-5">
            <VBox styleClass="gap-1">
                <Label text="Accounts" styleClass="text-2xl font-bold text-gray-900 pb-1"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add Accounts"
                    fx:id="addAccountBtn"
                    styleClass="hover-bg-blue-700 p-4-2 bg-blue-600 text-white font-roboto cursor-pointer"/>
        </HBox>
        <!-- Overview Cards -->
        <GridPane hgap="24" vgap="24" styleClass="pb-4">
            <columnConstraints>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="33"/>
            </columnConstraints>
            <!-- Card 1 Total Budget-->
            <VBox styleClass="card p-6" GridPane.columnIndex="0">
                <Label text="Total Balance" styleClass="text-sm text-gray-500 pb-2 font-roboto"/>
                <Label text="\$24,150.30" styleClass="text-2xl font-bold text-gray-900 pb-2"/>
                <Label text="12.5% this month" styleClass="text-sm text-green-500 font-roboto"/>
            </VBox>
            <!-- Card 2 Spent-->
            <VBox styleClass="card p-6" GridPane.columnIndex="1">
                <Label text="Active Accounts" styleClass="text-sm text-gray-500 pb-2 font-roboto"/>
                <Label text="5" styleClass="text-2xl font-bold text-gray-900 pb-2"/>
                <Label text="Across 3 banks" styleClass="text-sm text-gray-500 font-roboto"/>
            </VBox>

            <!-- Card 3 Alerts-->
            <VBox styleClass="card p-6" GridPane.columnIndex="2">
                <Label text="Last Sync" styleClass="text-sm text-gray-500 pb-2 font-roboto"/>
                <Label text="2 mins ago" styleClass="text-2xl font-bold text-gray-900 pb-2"/>
                <Label text="All accounts up to date" styleClass="text-sm text-gray-500 font-roboto"/>
            </VBox>
        </GridPane>
        <!-- Accounts Card Section -->
        <VBox styleClass="card p-6" spacing="16">
            <!-- Section Title -->
            <Label text="Your Accounts" styleClass="text-base font-bold text-gray-900 pb-2"/>

            <!-- Account Items -->
            <VBox spacing="12">
                <!-- Account 1 -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <StackPane prefHeight="50.0" prefWidth="50.0">
                        <Circle fill="#dbeafe" radius="24.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0"/>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../assets/dash_bank.png"/>
                        </ImageView>
                    </StackPane>
                    <VBox>
                        <Label text="Chase Bank" styleClass="text-base font-bold"/>
                        <Label text="Checking **** 4521" styleClass="text-sm text-gray-500"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <VBox alignment="CENTER_RIGHT">
                        <Label text="\$8,250.50" styleClass="text-base font-bold"/>
                        <Label text="Connected" styleClass="text-sm text-green-500"/>
                    </VBox>
                </HBox>
                <Separator/>

                <!-- Account 2 -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <StackPane prefHeight="50.0" prefWidth="50.0">
                        <Circle fill="#fca5a5" radius="24.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0"/>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../assets/eng_bank.png"/>
                        </ImageView>
                    </StackPane>
                    <VBox>
                        <Label text="Bank of England" styleClass="text-base font-bold"/>
                        <Label text="Savings **** 7845" styleClass="text-sm text-gray-500"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <VBox alignment="CENTER_RIGHT">
                        <Label text="\$12,380.25" styleClass="text-base font-bold"/>
                        <Label text="Connected" styleClass="text-sm text-green-500"/>
                    </VBox>
                </HBox>
                <Separator/>

                <!-- Account 3 -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <StackPane prefHeight="50.0" prefWidth="50.0">
                        <Circle fill="#dcfce7" radius="24.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0"/>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../assets/well_fargo.png"/>
                        </ImageView>
                    </StackPane>
                    <VBox>
                        <Label text="Wells Fargo" styleClass="text-base font-bold"/>
                        <Label text="Credit Card **** 9632" styleClass="text-sm text-gray-500"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <VBox alignment="CENTER_RIGHT">
                        <Label text="-$1,250.80" styleClass="text-base text-red-500 font-bold"/>
                        <Label text="Connected" styleClass="text-sm text-green-500"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>

        <!-- Footer Buttons -->
        <GridPane hgap="24" vgap="24">
            <VBox.margin>
                <Insets top="16"/>
            </VBox.margin>
            <columnConstraints>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="33"/>
            </columnConstraints>

            <!-- Button 1 -->
            <HBox styleClass="card px-4 py-2" alignment="CENTER" GridPane.columnIndex="0" prefHeight="50">
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../assets/sync_acc.png"/>
                </ImageView>
                <Label text="  Sync Accounts" styleClass="text-sm text-gray-900 font-roboto"/>
            </HBox>

            <!-- Button 2 -->
            <HBox styleClass="card px-4 py-2" alignment="CENTER" spacing="8" GridPane.columnIndex="1" prefHeight="50">
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../assets/download.png"/>
                </ImageView>
                <Label text="Export Statement" styleClass="text-sm text-gray-900 font-roboto"/>
            </HBox>

            <!-- Button 3 -->
            <HBox styleClass="card px-4 py-2" alignment="CENTER" spacing="8" GridPane.columnIndex="2" prefHeight="50">
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../assets/setting.png"/>
                </ImageView>
                <Label text="Account Settings" styleClass="text-sm text-gray-900 font-roboto"/>
            </HBox>
        </GridPane>
    </VBox>
</StackPane>