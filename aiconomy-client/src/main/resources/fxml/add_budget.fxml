<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.se.aiconomy.client.controller.AddBudgetController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f0f0f0;">
    <children>
    <VBox spacing="16" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding:12;"> <!-- 比原来的padding更紧凑 -->

        <!-- 顶部行：左侧标题与描述，右侧关闭按钮 -->
        <HBox alignment="TOP_LEFT" spacing="8">
            <VBox alignment="TOP_LEFT" spacing="4">
                <Label text="Add Budget"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Create a new budget category and set the amount"
                       style="-fx-text-fill: #6B7280; -fx-font-size: 12px;" /> <!-- gray-500 -->
            </VBox>

            <Region HBox.hgrow="ALWAYS" /> <!-- 占位推送 × 到右边 -->

            <Button text="×"
                    onAction="#onCancel"
                    style="-fx-font-size: 18px; -fx-background-color: transparent; -fx-text-fill: black; -fx-cursor: hand;"
                    focusTraversable="false"/>
        </HBox>

        <!-- 主体内容 -->
        <VBox spacing="8" alignment="TOP_LEFT">

            <!-- 主卡片容器 -->
            <VBox  HBox.hgrow="ALWAYS"
                  style="-fx-background-color: white; -fx-padding: 6;">
                <HBox alignment="CENTER_LEFT">
                    <Label text="Category" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- 卡片统计内容 -->
                <GridPane hgap="24" vgap="24" styleClass="pb-4" style="-fx-padding: 10 0 0 0;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <!-- 卡片项 1 -->
                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>


                    <!-- 卡片项 2 -->
                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>


                    <!-- 卡片项 3 -->
                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>


                    <!-- 卡片项 4 -->

                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="3" GridPane.rowIndex="0">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>

                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>

                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>

                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>

                    <VBox spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                          GridPane.columnIndex="3" GridPane.rowIndex="1">
                        <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                    </VBox>




                </GridPane>
            </VBox>
        </VBox>


        <VBox HBox.hgrow="ALWAYS"
              style="-fx-background-color: white; -fx-padding: 6;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Budget Amount" styleClass="pb-4" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
            <TextField fx:id="budgetAmountInput" promptText="\$ 0.00" VBox.vgrow="NEVER"
                       style="-fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        </VBox>



        <!-- 时间段容器 -->
        <VBox  HBox.hgrow="ALWAYS"
               style="-fx-background-color: white; -fx-padding: 6;">
        <HBox alignment="CENTER_LEFT">
            <Label text="Category" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
            <!-- 卡片统计内容 -->
            <GridPane hgap="24" vgap="24" styleClass="pb-4" style="-fx-padding: 10 0 0 0;">
                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                </columnConstraints>

                <!-- 卡片项 1 -->
                <VBox spacing="5"
                      style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                      GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                </VBox>


                <!-- 卡片项 2 -->
                <VBox spacing="5"
                      style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                      GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                </VBox>


                <!-- 卡片项 3 -->
                <VBox spacing="5"
                      style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 15; -fx-background-radius: 10;"
                      GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Total Budget" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                </VBox>






            </GridPane>
        </VBox>



        <!-- alert容器 -->
        <VBox HBox.hgrow="ALWAYS"
              style="-fx-background-color: white; -fx-padding: 6;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Alert Settings" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- 选项 1 -->
            <HBox alignment="CENTER_LEFT">
                <CheckBox text="Option 1" fx:id="option1CheckBox" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- 选项 2 -->
            <HBox alignment="CENTER_LEFT">
                <CheckBox text="Option 2" fx:id="option2CheckBox" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- 选项 3 -->
            <HBox alignment="CENTER_LEFT">
                <CheckBox text="Option 3" fx:id="option3CheckBox" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>

        <VBox HBox.hgrow="ALWAYS"
              style="-fx-background-color: white; -fx-padding: 6;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Notes (Optional)" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- 文字输入框 -->
            <TextField fx:id="additionalNotesInput" promptText="Add any additional notes..."
                       style="-fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5;"
                       prefHeight="40" maxWidth="Infinity" VBox.vgrow="NEVER"/>

            <!-- 按钮间隔 -->
            <Region VBox.vgrow="NEVER" prefHeight="10"/>

            <!-- 按钮区域 -->
            <HBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="NEVER">
                <Button text="Save" fx:id="saveButton" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
                <Button text="Cancel" fx:id="cancelButton" style="-fx-background-color: #f9f9f9; -fx-border-color: #dcdcdc; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-padding: 8 16;"/>
            </HBox>
        </VBox>

    </VBox>
    </children>
</AnchorPane>
