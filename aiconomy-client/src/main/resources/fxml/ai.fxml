    <VBox styleClass="gap-3">
        <Label styleClass="text-sm font-medium text-gray-700">Ask about your spending</Label>
        <HBox styleClass="gap-2">
            <TextField promptText="E.g., Where can I save money?" styleClass="border border-gray-200 rounded-lg text-sm focus-border-blue-500" HBox.hgrow="ALWAYS" />
            <Button styleClass="p-2 bg-blue-600 text-white rounded-lg hover-bg-blue-700 cursor-pointer">
                Send
            </Button>
        </HBox>
        <FlowPane hgap="8" vgap="8">
            <Button styleClass="p-3-1_5 border-none text-xs bg-gray-100 text-gray-700 rounded-full hover-bg-gray-200 cursor-pointer">
                Budget optimization?
            </Button>
            <Button styleClass="p-3-1_5 border-none text-xs bg-gray-100 text-gray-700 rounded-full hover-bg-gray-200 cursor-pointer">
                Savings potential?
            </Button>
            <Button styleClass="p-3-1_5 border-none text-xs bg-gray-100 text-gray-700 rounded-full hover-bg-gray-200 cursor-pointer">
                Weekend spending?
            </Button>
        </FlowPane>
    </VBox>
