<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <!-- Top Section -->
                <HBox alignment="CENTER" styleClass="pb-8 gap-5">
                    <VBox styleClass="gap-1">
                        <Label text="Budgets" styleClass="text-2xl font-semibold text-gray-900 pb-1"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Add Budgets" styleClass="hover-bg-blue-700 p-4-2 bg-blue-600 text-white font-roboto cursor-pointer"/>
                </HBox>

                <!-- Overview Cards -->
                <GridPane hgap="24" vgap="24" styleClass="pb-8">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <VBox styleClass="card p-6" GridPane.columnIndex="0">
                        <Label text="Total Budget" styleClass="text-sm text-gray-500 pb-2 font-roboto" />
                        <Label text="\$5,000.00" styleClass="text-2xl font-bold text-gray-900 pb-2"/>
                        <Label text="Used 64.8%" styleClass="text-sm text-gray-500 font-roboto"/>
                    </VBox>

                    <!-- Card 2 -->
                    <VBox styleClass="card p-6" GridPane.columnIndex="1">
                        <Label text="Spent" styleClass="text-sm text-gray-500 pb-2 font-roboto" />
                        <Label text="\$3,240.50" styleClass="text-2xl font-bold text-gray-900 pb-2" />
                        <Label text="Left $1,759.50" styleClass="text-sm text-gray-500 font-roboto"/>
                    </VBox>

                    <!-- Card 3 -->
                    <VBox styleClass="card p-6" GridPane.columnIndex="2">
                        <Label text="Alerts" styleClass="text-sm text-gray-500 pb-2 font-roboto"/>
                        <Label text="2" styleClass="text-2xl font-bold text-gray-900 pb-2"/>
                        <Label text="Over Budget" styleClass="text-sm text-gray-500 font-roboto"/>
                    </VBox>

                    <!-- Card 4 -->
                    <VBox styleClass="card p-6" GridPane.columnIndex="3">
                        <Label text="Daily Available" styleClass="text-sm text-gray-500 pb-2 font-roboto"/>
                        <Label text="\$58.65" styleClass="text-2xl font-bold text-red-500 pb-2"/>
                        <Label text="30 days left" styleClass="text-sm text-gray-500 font-roboto"/>
                    </VBox>
                </GridPane>


                <!-- Budget Management -->
                <HBox spacing="20">
                    <children>
                        <!-- Category Budgets -->
                        <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label text="Category Budgets" style="-fx-font-weight: bold;" />
                                        <Button text="AI Optimize">
                                            <graphic>
                                                <ImageView fitHeight="16" fitWidth="16" />
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
