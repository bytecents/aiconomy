<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import java.lang.String?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.aiconomy.client.controller.SidebarController" stylesheets="/css/styles.css">
    <BorderPane maxWidth="250.0" minWidth="250.0" prefWidth="250.0" styleClass="bg-secondary border-r">
        <top>
            <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../assets/logo.png"/>
                </ImageView>
                <Label alignment="CENTER" minWidth="60.0" style="&#10;" text="AIconomy" textAlignment="CENTER"
                       textFill="#111827">
                    <styleClass>
                        <String fx:value="font-bold" />
                        <String fx:value="text-2xl" />
                    </styleClass>
                </Label>
            </HBox>
        </top>
        <center>
            <VBox spacing="10.0"
                  style="-fx-border-color: #E5E7EB; -fx-border-width: 0 0 1 0;"
                  BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets top="20.0"/>
                </BorderPane.margin>
                <HBox fx:id="dashboardBtn" alignment="CENTER_LEFT" onMouseClicked="#switchToDashboard"
                      spacing="12.0" style="-fx-background-radius: 8;">
                    <padding>
                        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                    </padding>
                    <ImageView fx:id="dashboardIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@../assets/dashboard.png"/>
                    </ImageView>
                    <Label fx:id="dashboardLabel" text="Dashboard">
                        <styleClass>
                            <String fx:value="font-roboto" />
                            <String fx:value="text-base" />
                        </styleClass>
                    </Label>
                </HBox>
                <HBox fx:id="transactionsBtn" alignment="CENTER_LEFT" onMouseClicked="#switchToTransactions"
                      spacing="12.0" style="-fx-background-radius: 8;">
                    <padding>
                        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                    </padding>
                    <ImageView fx:id="transactionsIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@../assets/transactions.png"/>
                    </ImageView>
                    <Label fx:id="transactionsLabel" text="Transactions">
                        <styleClass>
                            <String fx:value="font-roboto" />
                            <String fx:value="text-base" />
                        </styleClass>
                    </Label>
                </HBox>
                <HBox fx:id="analyticsBtn" alignment="CENTER_LEFT" onMouseClicked="#switchToAnalytics" spacing="12.0"
                      style="-fx-background-radius: 8;">
                    <padding>
                        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                    </padding>
                    <ImageView fx:id="analyticsIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@../assets/analytics.png"/>
                    </ImageView>
                    <Label fx:id="analyticsLabel" text="Analytics">
                        <styleClass>
                            <String fx:value="font-roboto" />
                            <String fx:value="text-base" />
                        </styleClass>
                    </Label>
                </HBox>
                <HBox fx:id="budgetsBtn" alignment="CENTER_LEFT" onMouseClicked="#switchToBudgets" spacing="12.0"
                      style="-fx-background-radius: 8;">
                    <padding>
                        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                    </padding>
                    <ImageView fx:id="budgetsIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@../assets/budgets.png"/>
                    </ImageView>
                    <Label fx:id="budgetsLabel" text="Budgets">
                        <styleClass>
                            <String fx:value="font-roboto" />
                            <String fx:value="text-base" />
                        </styleClass>
                    </Label>
                </HBox>
                <HBox fx:id="accountsBtn" alignment="CENTER_LEFT" onMouseClicked="#switchToAccounts" spacing="12.0"
                      style="-fx-background-radius: 8;">
                    <padding>
                        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                    </padding>
                    <ImageView fx:id="accountsIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@../assets/accounts.png"/>
                    </ImageView>
                    <Label fx:id="accountsLabel" text="Accounts">
                        <styleClass>
                            <String fx:value="font-roboto" />
                            <String fx:value="text-base" />
                        </styleClass>
                    </Label>
                </HBox>
            </VBox>
        </center>
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <bottom>
            <HBox fx:id="settingsBtn" alignment="CENTER_LEFT" onMouseClicked="#switchToSettings" spacing="12.0"
                  style="-fx-background-radius: 8;" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                </padding>
                <BorderPane.margin>
                    <Insets top="20.0"/>
                </BorderPane.margin>
                <ImageView fx:id="settingsIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@../assets/settings.png"/>
                </ImageView>
                <Label fx:id="settingsLabel" text="Settings">
                    <styleClass>
                        <String fx:value="font-roboto" />
                        <String fx:value="text-base" />
                    </styleClass>
                </Label>
            </HBox>
        </bottom>
    </BorderPane>
    <ScrollPane fx:id="contentArea" prefHeight="720.0" fitToWidth="true" HBox.hgrow="ALWAYS" fitToHeight="true" />
</HBox>
